<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5p] %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${env:SL_LOGGING_LEVEL:-info}">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
